@model DierentuinGroep6.Models.Enclosure

<h1>Create Enclosure</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>
    <div class="form-group">
        <label for="Climate">Climate</label>
        <select class="form-control" id="Climate" name="Climate" required>
            <option value="Tropical">Tropical</option>
            <option value="Temperate">Temperate</option>
            <option value="Arctic">Arctic</option>
        </select>
    </div>
    <div class="form-group">
        <label for="HabitatType">Habitat Type</label>
        <select class="form-control" id="HabitatType" name="HabitatType" required>
            <option value="Forest">Forest</option>
            <option value="Aquatic">Aquatic</option>
            <option value="Desert">Desert</option>
            <option value="Grassland">Grassland</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>
