
@model IEnumerable<DierentuinGroep6.Models.Animal>

<h1>Dierenlijst</h1>

<table>
    <thead>
        <tr>
            <th>Naam</th>
            <th>Soort</th>
            <th>Grootte</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var animal in Model)
        {
            <tr>
                <td>@animal.Name</td>
                <td>@animal.Species</td>
                <td>@animal.Size</td>
                <td>
                    <a href="#">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Animals/Create">Nieuw Dier Toevoegen</a>

